
upstream django {
    server web:8000;  # Подключение к TCP-сокету сервиса "web" на порту 8000
}

server {
    listen 80;
    server_name www.educaproject.com;

    location / {
        uwsgi_pass django;
        include /etc/nginx/uwsgi_params;
    }

    location /static/ {
        alias /app/static/;
    }

    location /media/ {
        alias /app/media/;
    }
}
